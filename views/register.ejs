<h1>Sign Up!</h1>

<form action="/register" method="post">
    <input type="text" name="username" placeholder="username" required>
    <input type="password" name="password" placeholder="password" required>
    <input type="text" name="balance" placeholder="Initial balance" required>

    <div>
        <input type="radio" name="userType" value="normal" checked>
        <label for="huey">Normal</label>
    </div>

    <div>
        <input type="radio" name="userType" value="trader">
        <label for="dewey">Trader</label>
    </div>
    <button>Sign Up</button>
</form>